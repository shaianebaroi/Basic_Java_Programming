import java.util.Scanner;

public class Monday {
    public static void main (String [] args){
        scanner sc = new Scanner (System.in);
        
        System.out.println ("Please enter a number.");
        int num = sc.nextInt ();
        
        int count = 0; 
        
        while (num >= 0) {
            int num2 = num/10;
            ++count
        }
        System.out.println ("The number of digits are" + count);
    }
}
    